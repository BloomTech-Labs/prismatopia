    "graphql-tools": "^4.0.7",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.7.0",
    "prisma-client-lib": "^1.34.10",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.4",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "standard": "^14.3.3",
    "typescript": "^3.8.3"
