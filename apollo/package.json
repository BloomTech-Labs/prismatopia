{
  "name": "prismatopia-apollo",
  "description": "Apollo layer for Prismatopia",
  "version": "1.0.0",
  "author": "Lambda Labs",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "server": "nodemon index.js",
    "test": "jest --watchAll --runInBand",
